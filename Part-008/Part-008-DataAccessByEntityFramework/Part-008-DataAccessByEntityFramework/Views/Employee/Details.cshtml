@model Part_008_DataAccessByEntityFramework.Models.Employee
@{
    ViewBag.Title = "Employee Details";
}
<h2>
    Employee Details
</h2>
<p>Pass any ID into the url E.g. http://localhost:54193/Employee/Details/4</p>
<table border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <b>Employee ID :</b>
        </td>
        <td>
            @Model.EmployeeID
        </td>
    </tr>
    <tr>
        <td>
            <b>Name :</b>
        </td>
        <td>
            @Model.Name
        </td>
    </tr>
    <tr>
        <td>
            <b>Gender :</b>
        </td>
        <td>
            @Model.Gender
        </td>
    </tr>
    <tr>
        <td>
            <b>City :</b>
        </td>
        <td>
            @Model.City
        </td>
    </tr>
</table>
